<div class="container">
    <div class="row min-vh-100 text-center m-0 d-flex flex-column justify-content-center">
        <div class="col-sm-6 m-auto ">
        
            <div class="card card-body bg-light w-75">
                <h5 class="h3 mb-5">Books App | Register</h5>
                <% include ./partials/messages %>
                <form action="/user/register" method="POST">
                    <div class="form-group mb-2">
                        <label class="sr-only" for="name" class>Name</label>
                        <input class="form-control" type="name" id="name" name="name" placeholder="Enter your Fullname" value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>
                    <div class="form-group mb-2">
                        <label class="sr-only" for="email" class>Email</label>
                        <input class="form-control" type="email" id="email" name="email" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="form-group mb-2">
                        <label class="sr-only" for="password" class>Password</label>
                        <input class="form-control" type="password" id="password" name="password" placeholder="Create password" value="<%= typeof password != 'undefined' ? password : '' %>">
                        <small class="form-text text-muted">Password should be at least 6 characters.</small>
                    </div>
                    <div class="form-group mb-5">
                        <label class="sr-only" for="confirm-password">Confirm password</label>
                        <input class="form-control" type="password" id="password2" name="password2" placeholder="Confirm password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                    </div>

                    <button class="btn btn-primary btn-block mb-2" type="submit">Register</button>
                </form>

                <span>Already registered?  <a href="/user/login">Login</a></span>
            </div>

            <nav class="mt-4" aria-label="breadcrumb" style="width: 75%;">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Register</li>
                </ol>
            </nav>
        </div>  
    </div>  
</div>