<% include ../partials/navbar %>

<div class="bg-light">
    <div class="row mt-5">
        <div class="col-sm-6 mx-auto">
            <div class="card bg-white">
              <div class="card-body">
                <form action="/update" method="POST">
                    <input type="hidden" name="_id" id="_id" value="<%=  book._id  %>">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter title of the book" value="<%= book.title  %>">
                    </div>
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input type="text" class="form-control" id="author" name="author" placeholder="Enter author of the book" value="<%= book.author %>">
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre</label>
                        <input type="text" class="form-control" id="genre" name="genre" placeholder="Enter genre of the book" value="<%= book.genre %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="Enter description of the book" value="<%= book.description  %>">
                    </div>
                    
                    <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Save</button>
                    <a class="btn btn-outline-primary" href="/"><i class="fas fa-list"></i> View Books</a>
                </form>
              </div>
            </div>
        </div>
    </div>
</div>